{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "target": "ES2022",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
//        "allowJs": true,
        "noFallthroughCasesInSwitch": true,
//        "resolveJsonModule": true,
//        "skipLibCheck": true,
        "strict": true,
    },
    "ts-node": {
        "esm": true,
        "esModuleInterop": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
