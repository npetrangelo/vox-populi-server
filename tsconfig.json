{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "es2022",
        "outDir": "./dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowJs": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "strict": true
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
